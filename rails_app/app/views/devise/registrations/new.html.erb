<h2 class="form_heading">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field"><%= devise_error_messages! %></div>

  <div class="field">
    <%= f.label :email %>  <span class="error email-error">Invalid Email</span>
    <%= f.email_field :email, autofocus: true ,:required => true, :onchange => "validate_signup_form()" %>
  </div>

  <div class="actions field">
    <%= f.submit "Sign up", :id => "signup_submit_btn"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
